    // Clamp the velocity so that particles don't go haywire
    if (length(v) > 0.0) v = normalize(v) * clamp(length(v),0.0,30.0);
    velocities[id.x] = v;
    velocity_magnitudes[id.x] = length(v);
    particles[id.x].position += v * deltaTime;
}